<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <com.forrestguice.thunderwatch.lib.timer.AnalogTimerView
        android:id="@+id/customAnalogClock"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        android:background="?displayFieldBackground"
        android:text="analogtimer"
        android:visibility="gone" />

    <com.forrestguice.thunderwatch.lib.timer.DigitalTimerView
        android:id="@+id/digitaltimer"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        android:background="?displayFieldBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:text="digitaltimer"
        android:visibility="gone" />

    <ToggleButton
        android:id="@+id/button_trigger"
        style="@style/timerButtonStyle"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"        
        android:layout_weight="1" />

</LinearLayout>